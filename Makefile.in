#---[ Configuration values ]---------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
PACKAGE_LEVEL=@PACKAGE_LEVEL@
PACKAGE_TARNAME=@PACKAGE_TARNAME@
PACKAGE_DESCRIPTION=@PACKAGE_DESCRIPTION@
PLUGINS=@PLUGINS@

#---[ Paths ]------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
datarootdir=@datarootdir@
localedir=${datarootdir}/locale
docdir=@docdir@
sysconfdir=@sysconfdir@
mandir=@mandir@

BASEDIR=@BASEDIR@

POTDIR=$(BASEDIR)/.pot
BINDIR=$(BASEDIR)/.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Tools ]------------------------------------------------------------------

CC=@CC@
LD=@CC@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
MSGCAT=@MSGCAT@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
HELP2MAN=@HELP2MAN@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/@DLLPREFIX@3270@DLLEXT@ \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@ \
	$(foreach PLG, $(PLUGINS), $(BINRLS)/plugins/$(PLG)@DLLEXT@) \
	locale/$(PACKAGE_TARNAME).pot

Release: \
	$(BINRLS)/@DLLPREFIX@3270@DLLEXT@ \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@ \
	$(foreach PLG, $(PLUGINS), $(BINRLS)/plugins/$(PLG)@DLLEXT@)


#---[ Debug Rules ]----------------------------------------------------------------------

$(BINDBG)/@DLLPREFIX@3270@DLLEXT@: \
	modules/lib3270/* \
	modules/lib3270/src/lib3270/* \
	modules/lib3270/src/include/*

	@$(MKDIR) `dirname $@`
	@$(MAKE) -C modules/lib3270 Debug

	@$(MKDIR) $(BINDBG)
	@cp ./modules/lib3270/.bin/lib3270/Debug/* $(BINDBG)

$(BINDBG)/%@EXEEXT@: \
	$(BINDBG)/@DLLPREFIX@3270@DLLEXT@ \
	src/% \
	src/%/*

	@make -C src/$(notdir $(basename $@)) $@

$(BINDBG)/plugins/%@DLLEXT@: \
	$(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@ \
	src/plugins/%/*

	@$(MAKE) -C src/plugins/$(basename $(notdir $@)) $@

#---[ Release Rules ]--------------------------------------------------------------------

$(BINRLS)/@DLLPREFIX@3270@DLLEXT@: \
	modules/lib3270/* \
	modules/lib3270/src/lib3270/* \
	modules/lib3270/src/include/*

	@$(MKDIR) `dirname $@`
	@$(MAKE) -C modules/lib3270 Release

	@cp ./modules/lib3270/.bin/lib3270/Release/* $(BINRLS)

$(BINRLS)/%@EXEEXT@: \
	$(BINRLS)/@DLLPREFIX@3270@DLLEXT@ \
        src/% \
        src/%/*

	@$(MAKE) -C src/$(notdir $(basename $@)) $@

$(BINRLS)/plugins/%@DLLEXT@: \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@ \
	src/plugins/%/*
 
	@$(MAKE) -C src/plugins/$(basename $(notdir $@)) $@

$(DESTDIR)/$(libdir)/pw3270-plugins/%@DLLEXT@: \
	src/plugins/%/*

	@$(MAKE) -C src/plugins/$(basename $(notdir $@)) install

#---[ Install Rules ]--------------------------------------------------------------------

install: \
	locale/$(PACKAGE_TARNAME).pot \
	install-lib3270 \
	install-pw3270 \
	install-branding \
	install-ui \
	install-charsets \
	install-locale \
	install-plugins

	@$(INSTALL_DATA) conf/colors.conf $(DESTDIR)$(datarootdir)/$(PACKAGE_NAME)

ifneq ($(HELP2MAN),no)
	@$(MKDIR) $(DESTDIR)/$(mandir)/man1
	@LD_LIBRARY_PATH=$(BINRLS) \
		$(HELP2MAN) \
		--version-string="$(PACKAGE_TARNAME) - $(PACKAGE_DESCRIPTION) Vrs. $(PACKAGE_VERSION)" \
		$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@ | gzip --best --stdout - > $(DESTDIR)/$(mandir)/man1/$(PACKAGE_NAME).1.gz
endif

install-plugins: \
	$(foreach PLG, $(PLUGINS), $(DESTDIR)/$(libdir)/pw3270-plugins/$(PLG)@DLLEXT@)

install-%: \
	modules/%/Makefile

	@$(MAKE) -C `dirname $<` DESTDIR=$(DESTDIR) install

install-%: \
	src/%/Makefile

	@$(MAKE) -C `dirname $<` DESTDIR=$(DESTDIR) install

install-%: \
	%/Makefile

	@$(MAKE) -C `dirname $<` DESTDIR=$(DESTDIR) install


#---[ Misc Rules ]-----------------------------------------------------------------------

$(POTDIR)/plugins/%.pot: \
	./src/plugins/%/*
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@$(MAKE) -C src/plugins/$(basename $(notdir $@)) $@

$(POTDIR)/%.pot: \
	$(DEPENDS) \
	./src/%/*
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@$(MAKE) -C src/$(basename $(notdir $@)) $@

$(POTDIR)/%.pot: \
	./modules/%/* \
	./modules/%/src/*
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@$(MAKE) -C modules/$(basename $(notdir $@)) locale
	@cp modules/$(basename $(notdir $@))/$(basename $(notdir $@)).pot $@

$(POTDIR)/%.pot: \
	./%/*
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@$(MAKE) -C $(basename $(notdir $@)) $@


#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/@DLLPREFIX@3270@DLLEXT@ \
	$(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@ \
	$(foreach PLG, $(PLUGINS), $(BINDBG)/plugins/$(PLG)@DLLEXT@)

run: \
	$(BINDBG)/@DLLPREFIX@3270@DLLEXT@ \
	$(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@

	@LD_LIBRARY_PATH=$(BINDBG) $(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@

#---[ Misc Targets ]---------------------------------------------------------------------

locale: \
	locale/$(PACKAGE_TARNAME).pot

locale/$(PACKAGE_TARNAME).pot: \
	$(POTDIR)/pw3270.pot \
	$(POTDIR)/lib3270.pot \
	$(POTDIR)/ui.pot \
	$(foreach PLG, $(PLUGINS), $(POTDIR)/plugins/$(PLG).pot)

	@rm -f $@
	@mkdir -p `dirname $@`
	@$(MSGCAT) --sort-output $^ > $@

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

	@rm -fr $(POTDIR)

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)
	@$(MAKE) -C modules/lib3270 $@

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)
	@$(MAKE) -C modules/lib3270 $@




