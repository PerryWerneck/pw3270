#---[ Configuration values ]---------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
PACKAGE_LEVEL=@PACKAGE_LEVEL@
PACKAGE_TARNAME=@PACKAGE_TARNAME@
PACKAGE_DESCRIPTION=@PACKAGE_DESCRIPTION@

#---[ Paths ]------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
datarootdir=@datarootdir@
localedir=${datarootdir}/locale
docdir=@docdir@
sysconfdir=@sysconfdir@
mandir=@mandir@

BASEDIR=@BASEDIR@

POTDIR=$(BASEDIR)/.pot
BINDIR=$(BASEDIR)/.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Tools ]------------------------------------------------------------------

CC=@CC@
LD=@CC@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
MSGCAT=@MSGCAT@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
HELP2MAN=@HELP2MAN@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(foreach MODULE, $(MODULES), $(BINRLS)/@DLLPREFIX@$(MODULE)@DLLEXT@) \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@ \
	$(BINRLS)/libpw3270cpp.a \
	locale/$(PACKAGE_TARNAME).pot

Release: \
	application

application: \
	$(foreach MODULE, $(MODULES), $(BINRLS)/@DLLPREFIX@$(MODULE)@DLLEXT@) \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@ \

$(BINRLS)/libpw3270cpp.a: \
	src/libpw3270cpp/*

	@$(MAKE) -C src/libpw3270cpp Release

#---[ Debug Rules ]----------------------------------------------------------------------

$(BINDBG)/%@EXEEXT@: \
	$(foreach MODULE, $(MODULES), $(BINDBG)/@DLLPREFIX@$(MODULE)@DLLEXT@) \
	src/% \
	src/%/*

	@make -C src/$(notdir $(basename $@)) $@

#---[ Release Rules ]--------------------------------------------------------------------

$(BINRLS)/%@EXEEXT@: \
	$(foreach MODULE, $(MODULES), $(BINDBG)/@DLLPREFIX@$(MODULE)@DLLEXT@) \
        src/% \
        src/%/*

	@$(MAKE) -C src/$(notdir $(basename $@)) $@

publish-release: \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@

	@rm -f ~/public-html/release-$(PACKAGE_TARNAME)-@host_cpu@.zip
	@zip \
		-9 -D \
		~/public_html/release-$(PACKAGE_TARNAME)-@host_cpu@.zip \
		$(BINRLS)/*

#---[ Install Rules ]--------------------------------------------------------------------

install: \
	$(foreach MODULE, $(MODULES), install-$(MODULE)) \
	locale/$(PACKAGE_TARNAME).pot \
	install-pw3270 \
	install-branding \
	install-ui \
	install-charsets \
	install-locale

	@$(INSTALL_DATA) conf/colors.conf $(DESTDIR)$(datarootdir)/$(PACKAGE_NAME)

ifneq ($(HELP2MAN),no)
	@$(MKDIR) $(DESTDIR)/$(mandir)/man1
	@LD_LIBRARY_PATH=$(BINRLS) \
		$(HELP2MAN) \
		--version-string="$(PACKAGE_TARNAME) - $(PACKAGE_DESCRIPTION) Vrs. $(PACKAGE_VERSION)" \
		$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@ | gzip --best --stdout - > $(DESTDIR)/$(mandir)/man1/$(PACKAGE_NAME).1.gz
endif

install-%: \
	modules/%/Makefile

	@$(MAKE) -C `dirname $<` DESTDIR=$(DESTDIR) install

install-%: \
	src/%/Makefile

	@$(MAKE) -C `dirname $<` DESTDIR=$(DESTDIR) install

install-%: \
	%/Makefile

	@$(MAKE) -C `dirname $<` DESTDIR=$(DESTDIR) install


#---[ Misc Rules ]-----------------------------------------------------------------------

$(POTDIR)/%.pot: \
	$(DEPENDS) \
	./src/%/*
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@$(MAKE) -C src/$(basename $(notdir $@)) $@

$(POTDIR)/%.pot: \
	@LIBRARY_POT_FILES@/%.pot
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@cp "$^" $@

$(POTDIR)/%.pot: \
	./modules/%/* \
	./modules/%/src/* \
	./modules/%/Makefile
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@$(MAKE) -C modules/$(basename $(notdir $@)) $@

$(POTDIR)/%.pot: \
	./modules/%/%.pot
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`

	@echo cp $^ $@
	@false

$(POTDIR)/%.pot: \
	./%/*
 
	@echo $(notdir $@) ...
	@mkdir -p `dirname $@`
	@$(MAKE) -C $(basename $(notdir $@)) $@


#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@

publish-debug: \
	$(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@

	@rm -f ~/public-html/debug-$(PACKAGE_TARNAME)-@host_cpu@.zip
	@zip \
		-9 -D \
		~/public_html/debug-$(PACKAGE_TARNAME)-@host_cpu@.zip \
		$(BINDBG)/*

$(BINDBG)/libpw3270cpp.a: \
	src/libpw3270cpp/*

	@$(MAKE) -C src/libpw3270cpp Debug

run: \
	$(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@

	@LD_LIBRARY_PATH=$(BINDBG) $(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@

#---[ Misc Targets ]---------------------------------------------------------------------

locale: \
	locale/$(PACKAGE_TARNAME).pot

locale/$(PACKAGE_TARNAME).pot: \
	$(POTDIR)/pw3270.pot \
	$(POTDIR)/lib3270.pot \
	$(POTDIR)/libv3270.pot \
	$(POTDIR)/ui.pot

	@rm -f $@
	@mkdir -p `dirname $@`
	@$(MSGCAT) --sort-output $^ > $@

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

	@rm -fr $(POTDIR)
	@rm -fr $(BINDIR)92

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)
	@$(MAKE) -C src/pw3270 $@

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)
	@$(MAKE) -C src/pw3270 $@




