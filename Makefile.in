#---[ Configuration values ]---------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
PACKAGE_LEVEL=@PACKAGE_LEVEL@
PACKAGE_TARNAME=@PACKAGE_TARNAME@
PACKAGE_DESCRIPTION=@PACKAGE_DESCRIPTION@
PLUGINS=@PLUGINS@

#---[ Paths ]------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
datarootdir=@datarootdir@
localedir=${datarootdir}/locale
docdir=@docdir@
sysconfdir=@sysconfdir@
mandir=@mandir@

BASEDIR=@BASEDIR@

POTDIR=$(BASEDIR)/.pot
BINDIR=$(BASEDIR)/.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Tools ]------------------------------------------------------------------

CC=@CC@
LD=@CC@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/@DLLPREFIX@3270@DLLEXT@ \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@

Release: \
	$(BINRLS)/@DLLPREFIX@3270@DLLEXT@ \
	$(BINRLS)/$(PACKAGE_TARNAME)@EXEEXT@


$(BINRLS)/@DLLPREFIX@3270@DLLEXT@: \
	submodules/lib3270/* \
	submodules/lib3270/src/lib3270/* \
	submodules/lib3270/src/include/*

	@$(MKDIR) `dirname $@`
	$(MAKE) -C submodules/lib3270 Release

	@cp ./submodules/lib3270/.bin/lib3270/Debug/* $(BINRLS)

#---[ Debug Rules ]----------------------------------------------------------------------

$(BINDBG)/@DLLPREFIX@3270@DLLEXT@: \
	submodules/lib3270/* \
	submodules/lib3270/src/lib3270/* \
	submodules/lib3270/src/include/*

	@$(MKDIR) `dirname $@`
	@$(MAKE) -C submodules/lib3270 Debug

	@cp ./submodules/lib3270/.bin/lib3270/Debug/* $(BINDBG)

$(BINDBG)/%@EXEEXT@: \
	$(BINDBG)/@DLLPREFIX@3270@DLLEXT@ \
        src/% \
        src/%/*

	@make -C src/$(notdir $(basename $@)) $@


#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/@DLLPREFIX@3270@DLLEXT@ \
	$(BINDBG)/$(PACKAGE_TARNAME)@EXEEXT@

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)
	@$(MAKE) -C submodules/lib3270 $@

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)
	@$(MAKE) -C submodules/lib3270 $@




