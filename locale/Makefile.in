#---[ Configuration values ]-------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
datarootdir=@datarootdir@
localedir=${datarootdir}/locale

PACKAGE_NAME=@PACKAGE_NAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
PACKAGE_TARNAME=@PACKAGE_TARNAME@
PRODUCT_NAME=@PRODUCT_NAME@

BUILDDIR=@BUILDDIR@
BINDIR=$(BUILDDIR)/.bin/locale

MKDIR=@MKDIR_P@
MSGCAT=@MSGCAT@
MSGFMT=@MSGFMT@
MSGMERGE=@MSGMERGE@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@

#---[ Rules ]----------------------------------------------------------------------------

%.po: \
	$(PACKAGE_NAME).pot

	@echo $(basename $@) ...
	@$(MSGMERGE) --update --sort-output $@ $(PACKAGE_NAME).pot
	@touch $@

$(BINDIR)/%/LC_MESSAGES/$(PRODUCT_NAME).mo: \
	%.po

	@echo $< ...
	@$(MKDIR) `dirname $@`
	@$(MSGFMT) -c -v -o $@ $^

$(DESTDIR)/$(localedir)/%/LC_MESSAGES/$(PRODUCT_NAME).mo: \
	$(BINDIR)/%/LC_MESSAGES/$(PRODUCT_NAME).mo

	@echo $< ...
	@$(MKDIR) `dirname $@`
	@$(INSTALL_DATA) $^ $@

#---[ Targets ]--------------------------------------------------------------------------

all: \
	$(foreach SRC, $(basename $(wildcard *.po)), $(BINDIR)/$(SRC)/LC_MESSAGES/$(PRODUCT_NAME).mo)

install: \
	$(foreach SRC, $(basename $(wildcard *.po)), $(DESTDIR)/$(localedir)/$(SRC)/LC_MESSAGES/$(PRODUCT_NAME).mo)


