PACKAGE_NAME=@PACKAGE_NAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
PACKAGE_TARNAME=@PACKAGE_TARNAME@

prefix=@prefix@
exec_prefix=@exec_prefix@
datarootdir=@datarootdir@

BASEDIR=@BASEDIR@
SRCDIR=$(BASEDIR)/.src/$(PACKAGE_TARNAME)-$(PACKAGE_VERSION)/branding
BINDIR=$(BASEDIR)/.bin

MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
SVG2PNG=@SVG2PNG@
OPTIPNG=@OPTIPNG@

#---[ Rules ]----------------------------------------------------------------------------

$(BINDIR)/%.png: \
	%.svg

	@echo $< ...
	@$(MKDIR) `dirname $@`
	@$(SVG2PNG) $< --format=png > $@
	@$(OPTIPNG) -o7 $@

$(SRCDIR):

	@$(MKDIR) $@
	@$(INSTALL_DATA) $(PACKAGE_NAME).svg $(PACKAGE_NAME)-logo.svg *.in $@

$(BINDIR)/%.png: \
	%.png

	@echo $< ...
	@$(MKDIR) `dirname $@`
	@$(OPTIPNG) -out $@ -o7 $<

$(DESTDIR)$(datarootdir)/$(PACKAGE_NAME)/%.png: \
	$(BINDIR)/%.png

	@$(MKDIR) `dirname $@`
	@$(INSTALL_DATA) $< $@

install: \
	$(DESTDIR)$(datarootdir)/$(PACKAGE_NAME)/$(PACKAGE_NAME).png \
	$(DESTDIR)$(datarootdir)/$(PACKAGE_NAME)/$(PACKAGE_NAME)-logo.png



