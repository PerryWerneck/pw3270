CLASS_CFLAGS=@CFLAGS@ @DLL_CFLAGS@ @DBUS_CFLAGS@ @GTK_CFLAGS@
CLASS_LIBS=@LIBICONV@ @DBUS_LIBS@

CLASS_SRC=session.cc exception.cc local.cc remote.cc

CLASS_DEBUG_OBJECTS=$(foreach SRC, $(basename $(CLASS_SRC)), $(OBJDBG)/classlib/$(SRC)@OBJEXT@)
CLASS_RELEASE_OBJECTS=$(foreach SRC, $(basename $(CLASS_SRC)), $(OBJRLS)/classlib/$(SRC)@OBJEXT@)

#---[ Rules ]------------------------------------------------------------------

$(OBJDBG)/classlib/%.o: $(CLASSLIBDIR)/%.cc
	@echo "  CC   `basename $@`"
	@$(MKDIR) `dirname $@`
	@$(CXX) $(CLASS_CFLAGS) $(PW3270_CFLAGS) $(DEBUG_CFLAGS) -o $@ -c $<

$(OBJRLS)/classlib/%.o: $(CLASSLIBDIR)/%.cc
	@echo "  CC   `basename $@`"
	@$(MKDIR) `dirname $@`
	@$(CXX) $(CLASS_CFLAGS) $(PW3270_CFLAGS) -o $@ -c $<
