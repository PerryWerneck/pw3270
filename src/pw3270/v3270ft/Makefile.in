MODULE_NAME=v3270ft

#---[ Application sources ]--------------------------------------------------------------

SOURCES=filelist.c load.c misc.c select.c transfer.c v3270ftprogress.c get.c \
		marshal.c save.c set.c v3270ft.c tables.c

#---[ Configuration values ]-------------------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
PACKAGE_TARNAME=@PACKAGE_TARNAME@

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
documentroot=@documentroot@
sysconfdir=@sysconfdir@
cachedir=/var/cache
logdir=@LOGDIR@

OBJDIR?=.obj
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR?=.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

VALGRIND=@VALGRIND@
DOXYGEN=@DOXYGEN@
AMTAR=@AMTAR@
SHELL=@SHELL@
MKDIR=@MKDIR_P@
GENMARSHAL=@GENMARSHAL@

CC=@CC@
LD=@CC@
AR=@AR@

GTK_CFLAGS=@GTK_CFLAGS@
GTK_LIBS=@GTK_LIBS@

GLIB_CFLAGS=@GLIB_CFLAGS@
GLIB_LIBS=@GLIB_LIBS@

CFLAGS=@CFLAGS@ \
		@DLL_CFLAGS@ \
		-DBUILD_DATE=`date +"0x%Y%m%d"` \
		@LIB3270_CFLAGS@ \
		@PW3270_CFLAGS@ \
		$(GTK_CFLAGS)

LIBS=@LIBS@ $(GTK_LIBS)

DEPENDS=*.h ../include/*.h marshal.c marshal.h Makefile

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.c $(DEPENDS)

	@echo $(notdir $@) ...
	@$(MKDIR) `dirname $@`
	@$(CC) $(CFLAGS) -DNDEBUG=1 -o $@ -c $<

$(BINRLS)/$(MODULE_NAME).a: \
	$(foreach SRC, $(basename $(SOURCES)), $(OBJRLS)/$(SRC).o)

	@echo $(notdir $@) ...
	@$(MKDIR) `dirname $@`

	@$(AR) rcs $@ $^


#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.c $(DEPENDS)

	@echo $(notdir $@) ...
	@$(MKDIR) `dirname $@`
	@$(CC) $(CFLAGS) -DDEBUG=1 -o $@ -c $<

$(BINDBG)/$(MODULE_NAME).a: \
	$(foreach SRC, $(basename $(SOURCES)), $(OBJDBG)/$(SRC).o)

	@echo $(notdir $@) ...
	@$(MKDIR) `dirname $@`

	@$(AR) rcs $@ $^

#---[ Misc Rules ]-----------------------------------------------------------------------

marshal.h: \
	genmarshal

	@echo $(notdir $<) ...
	@$(MKDIR) `dirname $@`
	@$(GENMARSHAL) --prefix=$(MODULE_NAME) --header $< > $@

marshal.c: \
	genmarshal

	@echo $(notdir $<) ...
	@$(MKDIR) `dirname $@`
	@$(GENMARSHAL) --prefix=$(MODULE_NAME) --header $< > $@

#---[ Targets ]--------------------------------------------------------------------------

all: \
	$(BINRLS)/$(MODULE_NAME).a

Release: \
	$(BINRLS)/$(MODULE_NAME).a

Debug: \
	$(BINDBG)/$(MODULE_NAME).a

cleanRelease: clean

cleanDebug: clean

clean:
	@rm -fr $(BINDIR)
	@rm -fr $(OBJDIR)

