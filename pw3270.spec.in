#---[ Scripts ]-------------------------------------------------------------------------------------------------------

%post
/sbin/ldconfig
exit 0

%postun
/sbin/ldconfig
exit 0

%post -n lib3270
/sbin/ldconfig
exit 0

%postun -n lib3270
/sbin/ldconfig
exit 0

